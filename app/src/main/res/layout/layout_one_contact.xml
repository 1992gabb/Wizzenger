<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center_vertical"
    android:background="#FFF">


    <ImageView
        android:id="@+id/imgContactContacts"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="3dp"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_border"/>

    <LinearLayout
        android:id="@+id/layoutContacts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nomContact"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/contact_name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/contact_mess_icon"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_mess"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/imgWizz"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_wizz"
            android:layout_margin="10dp"/>

    </LinearLayout>


</LinearLayout>